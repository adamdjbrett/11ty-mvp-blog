<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or site.title }}</title>
  <meta name="description" content="{{ site.description }}">
  <meta name="color-scheme" content="light dark">
  <link rel="stylesheet" href="/assets/mvp.css">
  <link rel="stylesheet" href="/assets/overrides.css">
  </head>
<body>
  <header>
    <nav>
      <h1>{{ site.title }}</h1>
      <ul>
        <li><a href="/" {% if page.url == "/" %}class="active"{% endif %}>Home</a></li>
        <li><a href="/about/" {% if page.url == "/about/" %}class="active"{% endif %}>About</a></li>
        <li><a href="/blog/" {% if page.url.startsWith("/blog/") %}class="active"{% endif %}>Blog</a></li>
      </ul>
      <button id="theme-toggle" class="secondary" type="button" aria-pressed="false">Dark mode</button>
    </nav>
  </header>
  <main>
    <div class="blog-list">
      {{ content | safe }}
    </div>
  </main>
  <nav class="container pagination-nav">
{%- if collections.docs %}
{%- set previousPost = collections.docs | getPreviousCollectionItem %}
{%- if nextPost or previousPost %}
{%- if previousPost %}
<ul>
<li>
<a href="{{ previousPost.url }}" title="{{ previousPost.data.title }}" role="button" class="{{metadata.color}}">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
</svg> <small>Previous</small>
</a>
</li>
</ul>
{%- endif %}
{%- endif %}
{%- endif %}
{% if pagination.href.previous %}<ul><li><a href="{{ pagination.href.previous }}" class="secondary">← Previous</a></li></ul>{% endif %}
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- if nextPost or previousPost %}
{%- if previousPost %}
<ul>
<li>
<a href="{{ previousPost.url }}" title="{{ previousPost.data.title }}" role="button" class="{{metadata.color}}">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
</svg> <small>Previous</small>
</a>
</li>
</ul>
{%- endif %}
{%- endif %}
{%- endif %}
{%- if collections.docs %}
{%- set nextPost = collections.docs | getNextCollectionItem %}
{%- if nextPost or previousPost %}
{%- if nextPost %}
<ul>
<li>
<a href="{{ nextPost.url }}" title="{{ nextPost.data.title }}" role="button" class="{{metadata.color}}">
<small>Next</small> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
</svg>
</a>
</li>
</ul>
{%- endif %}
{%- endif %}
{%- endif %}
{% if pagination.href.next %}<ul><li><a href="{{ pagination.href.next }}" class="secondary">Next →</a></li></ul>{% endif %}
{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
{%- if nextPost %}
<ul>
<li>
<a href="{{ nextPost.url }}" title="{{ nextPost.data.title }}" role="button" class="{{metadata.color}}">
<small>Next</small> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
</svg>
</a>
</li>
</ul>
{%- endif %}
{%- endif %}
{%- endif %}
</nav>
  <footer>
    <hr>
    <p><small>&copy; {% year %} {{ site.author }} | Built with Eleventy & MVP.css</small></p>
  </footer>
  <script>
    (function() {
      const root = document.documentElement;
      const storageKey = 'theme';
      function apply(saved) {
        if (saved === 'dark') root.setAttribute('data-theme','dark'); else root.removeAttribute('data-theme');
      }
      function label() {
        const btn = document.getElementById('theme-toggle');
        if (!btn) return; const isDark = root.getAttribute('data-theme')==='dark';
        btn.textContent = isDark ? 'Light mode' : 'Dark mode';
        btn.setAttribute('aria-pressed', isDark ? 'true' : 'false');
      }
      function toggle(){ const isDark = root.getAttribute('data-theme')==='dark'; const next = isDark?'light':'dark'; localStorage.setItem(storageKey,next); apply(next); label(); }
      document.addEventListener('DOMContentLoaded', function(){ let saved = localStorage.getItem(storageKey); if(!saved){ saved=(window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches)?'dark':'light'; } apply(saved); label(); const btn=document.getElementById('theme-toggle'); if(btn) btn.addEventListener('click', toggle); });
    })();
  </script>
</body>
</html>
